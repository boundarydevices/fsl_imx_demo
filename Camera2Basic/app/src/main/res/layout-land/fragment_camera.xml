<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <com.example.android.camera.utils.AutoFitSurfaceView
        android:id="@+id/view_finder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@android:color/transparent" />

    <ImageButton
        android:id="@+id/capture_button"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginRight="96dp"
        android:scaleType="fitCenter"
        android:background="@drawable/ic_shutter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:contentDescription="@string/capture"
        tools:ignore="RtlHardcoded" />

    <RadioGroup
        android:id="@+id/wb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible"
        tools:visibility="visible">

        <RadioButton
            android:id="@+id/AWB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:clickable="true"
            android:text="@string/awb"
            android:focusable="true" />

        <RadioButton
            android:id="@+id/INCANDESCENT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/incandescent" />

        <RadioButton
            android:id="@+id/FLUORESCENT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fluorescent" />

        <RadioButton
            android:id="@+id/WARM_FLUORESCENT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/warm_fluorescent" />

        <RadioButton
            android:id="@+id/DAYLIGHT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/daylight" />

        <RadioButton
            android:id="@+id/CLOUDY_DAYLIGHT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cloudy_daylight" />

        <RadioButton
            android:id="@+id/TWILIGHT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/twilight" />
    </RadioGroup>

    <Button
        android:id="@+id/hflip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wb"
        android:text="@string/hflip" />

    <Button
        android:id="@+id/vflip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hflip"
        android:text="@string/vflip" />

    <Button
        android:id="@+id/dewarp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vflip"
        android:text="@string/dewarp" />

    <TextView
        android:id="@+id/text_exposure_gain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dewarp"
        android:text="@string/exposure_gain" />

    <SeekBar
        android:id="@+id/exposure_gain"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_exposure_gain"
        android:layout_width="200dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/text_exposure_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exposure_gain"
        android:text="@string/exposure_time_ns" />

    <SeekBar
        android:id="@+id/exposure_time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_exposure_time"
        android:layout_width="200dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/current_exposure_time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exposure_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/HDR"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/current_exposure_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HDR" />

    <CheckBox
        android:id="@+id/LSC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LSC"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/HDR" />

    <TextView
        android:id="@+id/text_gamma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LSC"
        android:text="gamma(1.0 - 5.0)" />

    <SeekBar
        android:id="@+id/gamma"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_gamma"
        android:layout_width="200dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/current_gamma"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gamma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_brightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/wb"
        android:text="brightness(-127 - 127)" />


    <SeekBar
        android:id="@+id/brightness"
        app:layout_constraintLeft_toRightOf="@id/wb"
        app:layout_constraintTop_toBottomOf="@id/text_brightness"
        android:layout_width="200dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/current_brightness"
        app:layout_constraintLeft_toRightOf="@id/wb"
        app:layout_constraintTop_toBottomOf="@id/brightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_contrast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/wb"
        app:layout_constraintTop_toBottomOf="@id/current_brightness"
        android:text="contrast(0.0 - 1.99)" />

    <SeekBar
        android:id="@+id/contrast"
        app:layout_constraintLeft_toRightOf="@id/wb"
        app:layout_constraintTop_toBottomOf="@id/text_contrast"
        android:layout_width="200dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/current_contrast"
        app:layout_constraintLeft_toRightOf="@id/wb"
        app:layout_constraintTop_toBottomOf="@id/contrast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_saturation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/wb"
        app:layout_constraintTop_toBottomOf="@id/current_contrast"
        android:text="saturation(0.0 - 1.99)" />

    <SeekBar
        android:id="@+id/saturation"
        app:layout_constraintLeft_toRightOf="@id/wb"
        app:layout_constraintTop_toBottomOf="@id/text_saturation"
        android:layout_width="200dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/current_saturation"
        app:layout_constraintLeft_toRightOf="@id/wb"
        app:layout_constraintTop_toBottomOf="@id/saturation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_hue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/wb"
        app:layout_constraintTop_toBottomOf="@id/current_saturation"
        android:text="hue(-127 - 127)" />

    <SeekBar
        android:id="@+id/hue"
        app:layout_constraintLeft_toRightOf="@id/wb"
        app:layout_constraintTop_toBottomOf="@id/text_hue"
        android:layout_width="200dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/current_hue"
        app:layout_constraintLeft_toRightOf="@id/wb"
        app:layout_constraintTop_toBottomOf="@id/hue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_sharp_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/wb"
        app:layout_constraintTop_toBottomOf="@id/current_hue"
        android:text="sharp_level(1 - 10)" />

    <SeekBar
        android:id="@+id/sharp_level"
        app:layout_constraintLeft_toRightOf="@id/wb"
        app:layout_constraintTop_toBottomOf="@id/text_sharp_level"
        android:layout_width="200dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/current_sharp_level"
        app:layout_constraintLeft_toRightOf="@id/wb"
        app:layout_constraintTop_toBottomOf="@id/sharp_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</androidx.constraintlayout.widget.ConstraintLayout>
